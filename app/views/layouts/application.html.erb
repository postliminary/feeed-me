<!DOCTYPE html>
<html>
<head>
  <title>Feeed Me</title>
  <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<!--Turbolinks clashing with polling setup-->
<body data-no-turbolink="true">
<div class="header">
  <div class="container">
    <div class="row">
      <div class="col-sm-12">
        <div class="banner">
          <h1 class="title">
            <%= link_to 'Feeed Me!', root_path %>
          </h1>
          <img src="/images/hands.png" >
          <% if notice %>
              <div id="notice" class="alert alert-warning alert-dismissible" role="alert">
                <button type="button" class="close" data-dismiss="alert">
                  <span aria-hidden="true">&times;</span><span class="sr-only">Close</span></button>
                <%= notice %>
                </button>
              </div>
              <script>
                  notice.close();
              </script>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
<div class="main">
  <div class="container">
    <div class="content row">
      <div class="col-xs-12">
        <%= yield %>
      </div>
    </div>
  </div>
</div>
<div class="footer">
  <div class="container">
    <div class="row">
      <div class="col-sm-6 col-sm-offset-3">
        <h4><span class="glyphicon glyphicon-warning-sign"></span> postliminary</h4>
      </div>
    </div>
  </div>
</div>
<script>
    $(document).ready(function () {
        $(".sticky").sticky({
            topSpacing: 20,
            getWidthFrom: ".sidebar",
            responsiveWidth: true
        });
    });
</script>
</body>
</html>
