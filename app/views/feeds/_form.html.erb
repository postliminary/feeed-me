<div class="row">
    <div class="col-xs-12">
    <%= form_for @feed, :html => {class: 'feed'} do |f| %>
      <% if @feed.errors.any? %>
          <div id="error_explanation">
            <h2><%= pluralize(@feed.errors.count, "error") %> prohibited this feed from being saved:</h2>

            <ul>
              <% @feed.errors.full_messages.each do |message| %>
                  <li><%= message %></li>
              <% end %>
            </ul>
          </div>
      <% end %>
      <div class="input-group">
        <%= f.label :url, class:'sr-only' %>
        <%= f.text_field :url, class:'form-control', placeholder:'Enter a url' %>
        <span class="input-group-btn">
          <%= f.submit 'Add', class:'btn btn-primary' %>
        </span>
      </div>

    <% end %>
    </div>
</div>