<div class="row">
  <div class="col-sm-3">
    <ul class="nav nav-stacked">
      <li>
        <%= link_to root_path do %>
            <span class="glyphicon glyphicon-hand-left"></span>
            <span>Back to all feeds</span>
        <% end %>
      </li>
    </ul>
    <div>
      <h2 class="feed-title"><%= @feed.title %></h2>

      <p class="small"><%= @feed.url %></p>

      <p>
        Updated <%= time_ago_in_words(@feed.updated_at) %> ago
      </p>
    </div>
    <hr />
    <ul class="nav nav-stacked">
      <li>
        <%= link_to @feed, method: :delete, data: {confirm: 'Remove this feed?'} do %>
            <span class="glyphicon glyphicon-thumbs-down"></span>
            <span>Remove this feed</span>
        <% end %>
      </li>
      <li>
        <%= link_to refresh_feed_path(@feed.id) do %>
            <span class="glyphicon glyphicon-refresh"></span>
            <span>Refresh this feed</span>
        <% end %>
      </li>
    </ul>
  </div>
  <div class="col-sm-6">
    <%= render 'entries/list' %>
  </div>
</div>



