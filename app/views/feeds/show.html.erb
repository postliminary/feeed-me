<div class="row">
  <div class="col-sm-4 sidebar">
    <div class="sticky">
      <ul class="nav nav-stacked">
        <li>
          <%= link_to root_path do %>
              <span class="glyphicon glyphicon-hand-left"></span>
              <span>Back to all feeds</span>
          <% end %>
        </li>
      </ul>
      <div>
        <h2 class="feed-title"><%= @feed.title %></h2>

        <p class="small"><%= @feed.url %></p>

        <p>
          Updated <%= time_ago_in_words(@feed.updated_at) %> ago
        </p>
      </div>
      <hr/>
      <ul class="nav nav-stacked">
        <li>
          <%= link_to @feed, method: :delete, data: {confirm: 'Remove this feed?'} do %>
              <span class="glyphicon glyphicon-thumbs-down"></span>
              <span>Remove this feed</span>
          <% end %>
        </li>
        <li>
          <%= link_to refresh_feed_path(@feed.id) do %>
              <span class="glyphicon glyphicon-refresh"></span>
              <span>Update this feed</span>
          <% end %>
        </li>
      </ul>
    </div>
  </div>
  <div class="col-sm-8">
    <div id="recent-entries">
      <%= render 'entries/list' %>
    </div>
  </div>
</div>
<% if (params[:page] == nil || params[:page] == "1") %>
    <script>
        feeds.update(<%= @feed.id %>, 2000);
    </script>
<% end %>



